<% provide(:title, "post") %>
<%= form_for(@post) do |f| %>

  <div class="field">
    <%= f.label :本のタイトル %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :この本の内容を予測 %><br />
    <%= f.text_area :what_content %>
  </div>

  <div class="field">
    <%= f.label :この本の問題意識 %><br />
    <%= f.text_area :what_problem %>
  </div>

  <div class="field">
    <%= f.label :保留 %><br />
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>

  <div class="actions">
  <%= f.submit "Post", class: "btn btn-primary" %>
  </div>
<% end %>
