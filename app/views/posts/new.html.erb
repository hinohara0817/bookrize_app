<%= form_for(@post) do |f| %>

  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>

  <div class="field">
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.text_area :what_content %>
  </div>

  <div class="field">
    <%= f.text_area :what_problem %>
  </div>

  <div class="actions">
  <%= f.submit "Post", class: "btn btn-primary" %>
  </div>
<% end %>
