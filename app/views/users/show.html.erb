<% provide(:title, "user_page") %>
<h1>Users#show</h1>
<p>I am <%= @user.name %></p>
<h1>My page</h1>
<section class="post_form">
  <%= link_to "投稿する", new_post_path %>
</section>
<%= link_to "edit", edit_user_registration_path(@user) %>
<div class="col-md-8">
  <% if @user.posts.any? %>
  <ol class="posts">
    <%= render @posts %>
  </ol>
  <% end %>
</div>
